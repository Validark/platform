{
  "name": "@dashevo/platform",
  "version": "1.0.0-dev.16",
  "private": true,
  "scripts": {
    "setup": "yarn install && yarn run build && yarn run configure",
    "start": "./scripts/dashmate group start --verbose -w",
    "restart": "./scripts/dashmate group restart --verbose",
    "stop": "./scripts/dashmate group stop --verbose",
    "reset": "yarn run clean:data --force && yarn run setup",
    "test": "yarn workspaces foreach --all --parallel --jobs 5 run test",
    "build": "yarn workspaces foreach --all --parallel --jobs 5 run build",
    "lint": "yarn workspaces foreach --all --parallel --jobs 5 run lint",
    "configure:tests:network": "yarn exec scripts/configure_test_suite_network.sh",
    "configure": "yarn exec ./scripts/configure.sh",
    "clean:data": "yarn run dashmate group reset --verbose --group=local --hard",
    "clean": "yarn run clean:data && yarn run build",
    "release": "yarn exec ./scripts/release/release.sh",
    "bench": "yarn workspace @dashevo/bench-suite bench",
    "dashmate": "echo 'Error: `yarn dashmate` is not supported anymore. Please use `./scripts/dashmate` instead'; exit 1"
  },
  "packageManager": "yarn@4.3.1",
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "add-stream": "^1.0.0",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-dash": "github:dashevo/conventional-changelog-dash",
    "semver": "^7.5.3",
    "tempfile": "^3.0.0"
  },
  "workspaces": [
    "packages/js-grpc-common",
    "packages/bench-suite",
    "packages/dapi-grpc",
    "packages/dashpay-contract",
    "packages/dpns-contract",
    "packages/feature-flags-contract",
    "packages/js-dapi-client",
    "packages/wallet-lib",
    "packages/js-dash-sdk",
    "packages/dapi",
    "packages/dashmate",
    "packages/platform-test-suite",
    "packages/masternode-reward-shares-contract",
    "packages/dash-spv",
    "packages/wasm-dpp",
    "packages/withdrawals-contract"
  ],
  "resolutions": {
    "elliptic": "^6.5.4",
    "bn.js": "4.12.0",
    "fast-json-patch": "^3.1.1",
    "node-tar": "^6.2.1",
    "oclif@3.4.2": "patch:oclif@npm:3.4.2#.yarn/patches/oclif-npm-3.4.2-a655d32eed.patch",
    "qs": "^6.7.3",
    "engine.io": "^6.4.2",
    "ua-parser-js": "^1.0.33",
    "dns-packet": "^5.4.0",
    "cpu-features": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.2.1.tgz",
    "socket.io-parser": "^4.2.3",
    "semver": "^7.5.3",
    "word-wrap": "^1.2.4",
    "protobufjs": "^6.11.4",
    "browserify-sign": "4.2.2",
    "istanbul-lib-processinfo": "2.0.3",
    "@babel/core": "7.23.3",
    "tar": "^6.2.1",
    "tsconfig-paths": "4.2.0",
    "ansi-regex": "5.0.1",
    "cacache": "18.0.0",
    "node-gyp": "10.0.1",
    "follow-redirects": "^1.15.5",
    "socks": "^2.8.1",
    "ws": "^8.17.1"
  },
  "dependencies": {
    "node-gyp": "^10.0.1"
  }
}
